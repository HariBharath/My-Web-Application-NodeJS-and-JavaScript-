<html>
    <head>
        <style>
            .bg-image {
  /* The image used */
            background-image: url('http://www.upstate.edu/evs/images/hospital-room.jpg');background-repeat: no-repeat;background-size: cover;
            }
            .bg-text {
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0, 0.4); /* Black w/opacity/see-through */
  color: white;
  font-size: 30px;
  font-weight: bold;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  width: 40%;
  padding: 20px;
  text-align: center;
  
  
}


h2{
    color: antiquewhite;
    font-size: 30px;
}
td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
  font-size: 25px;
  color: antiquewhite;

}

        </style>
    </head>
    <body class = "bg-image">
            <center><h2>Available Doctors' Name and Department Information :</h2></center>

        <div class = "bg-text">
                <center><table style="width : 50%">
                        <tr>
                                <th>NAME</th>
                                <th>DEPARTMENT</th>
                            </tr>
                        <% for(var i=0; i < data.length; i++) { %>
                           
                           <tr>
                             <td><%= data[i].Name %></td>
                             <td><%= data[i].Department %></td>
                           </tr>
                        <% } %>
                        </table></div></center>
                        
    </body>
</html>